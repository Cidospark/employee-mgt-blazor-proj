@inherits DisplayEmployeeBase

<div class="my-card-deck">
    <div class="card m-3" style="min-width: 18rem; max-width: 300px;">
        <div class="card-header">
            <input type="checkbox" checked="@IsSelected" @onchange="CheckBoxChanged" />
            <h3>@Employee.FirstName @Employee.LastName</h3>
        </div>
        <img src="@Employee.Photo" class="card-img-top imageThumbNail" />
        @if(ShowFooter)
        {
        <div class="card-footer text-center">
            <a href="@($"employeedetails/{Employee.EmployeeId}")" class="btn btn-primary m-1">View</a>
            <a href="@($"editemployee/{Employee.EmployeeId}")" class="btn btn-success m-1">Edit</a>
            <a href="#" class="btn btn-danger m-1">Delete</a>
        </div>
        }
        
    </div>
</div>