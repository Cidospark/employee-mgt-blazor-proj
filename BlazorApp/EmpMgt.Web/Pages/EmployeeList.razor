@page "/"
@inherits EmployeeListBase

<h3>Employee List</h3>

<div class="pt-5"></div>
@if(Employees == null)
{
    <div class="spinner"></div>
}
else
{
    <div class="my-card-deck">
        @foreach (var employee in Employees)
        {
            <div class="card m-3" style="min-width: 18rem; max-width: 300px;">
                <div class="card-header">
                    <h3>@employee.FirstName @employee.LastName</h3>
                </div>
                <img src="@employee.Photo" class="card-img-top imageThumbNail" />
                <div class="card-footer text-center">
                    <a href="#" class="btn btn-primary m-1">View</a>
                    <a href="#" class="btn btn-success m-1">Edit</a>
                    <a href="#" class="btn btn-danger m-1">Delete</a>
                </div>
            </div>
        }
    </div>
}

